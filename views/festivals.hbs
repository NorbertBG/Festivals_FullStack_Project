

<div class="container flex flex-wrap m-9 gap-5">

{{#each datafromDB }}

    <div class="w-1/5 max-w-sm rounded overflow-hidden shadow-lg">
    <img class="w-full h-80" src="{{ this.eventImage }}" alt="Event image">
    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2"><a href="/festivals/{{ this.id }}">{{this.name}}</a></div>
        <p class="text-gray-700 text-base truncate">
        {{this.description}}
        </p>
    </div>
    <div class="px-6 pt-4 pb-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{this.genre}}</span>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{this.city}}</span>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{this.season}}</span>
    </div>
    </div>

{{/each}}

</div>

